            <string>///Draws Choices

//Sets draw_colour for pause.
if global.pause
{
    //Sets to last used colour.
    draw_set_colour(drawcolour);    
}
else
{
    //Keyboard Highlight Color
    if ctr.tree.keyboard and global.nbr = nbr
    {
        draw_set_colour(dsdia.choice_color_on);
    }
    else if ctr.tree.keyboard
    {
        draw_set_colour(dsdia.choice_color_off);
    }
    else
    {
        //Determines new colour.
        scr_highlight(dsdia.choice_color_on, dsdia.choice_color_off);
        drawcolour = draw_get_colour();
    }
}

//Draws Text
draw_set_font(dsdia.choice_font);
draw_set_halign(fa_left);
draw_set_valign(fa_top);
draw_text(x, y, text);

//Draws the name of the player.
if nbr = 0 //Checks for first choice to only draw once.
{
    draw_set_colour(dsdia.name_color);
    draw_set_font(dsdia.name_font);
    draw_set_halign(fa_center);
    draw_text(diabox.x + dsdia.name_actor_xoffset, diabox.y - dsdia.name_actor_yoffset, global.playername);
}
